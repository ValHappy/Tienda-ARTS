<body>
    <header class="ppal">
        <section class="menu">
            <img src="/img/logo.png" class="menu__logo">
            <nav class="menu__nav" id="nav">
                <div class="menu-categoria">
                    <i class="fas fa-ellipsis-h menu-categoria__icono"></i>
                    <a class="menu-categoria__texto">Categoría</a>
                </div>
                <div class="menu-sesion">
                    <a class="menu-sesion__texto">Iniciar sesión</a>
                </div>
            </nav>
        </section>
    </header>

    <section class="encabezado">
        <h2 class="encabezado__titulo">Carrito de compras</h2>
        <p class="encabezado__continuar"><a href="/tienda">Continuar compras</a></p>
    </section>

    <section class="carrito">
        <div class="carrito__productos">

            <h3 class="carrito__titulo">Carrito de Compras</h3>
            <div class="lista__carrito">

            </div>
            <!--concatenar esto al inner html del js
            <div class="producto__contenedor">
